<!-- 多筆資料時 加入 className --m -->
<div class="card<%- data.length === 1 ? '' : ' --m' %> Bgc(xf) Bdrs(6) Ov(hide)">
  <div class="cardHd D(fx) Ai(c) P(24,t) P(16,m)">
    <ul class="Fxg Pr(24,t) Pr(16,m) Fz(26) in.Mt(6,t) in.Mt(4,m)">
      <li><b><%- data.length === 1 ? '单注' : '串关投注' %></b></li>
      <li class="D(ifx) In(n) C(x9abf) Mx(-4,t) Mx(-3,m)">
        <span class="D(b) Px(4,t) Px(3,m)">投注单号</span>
        <span class="D(b) Px(4,t) Px(3,m)">40184</span>
        <time class="D(b) Px(4,t) Px(3,m)">02/20/2021 09:35:20PM</time>
      </li>
      <% if ( reload ) { -%>
        <li class="D(ifx) In(n) C(x9abf) Mx(-4,t) Mx(-3,m)">
          <span class="D(b) Px(4,t) Px(3,m)">注单重算时间</span>
          <time class="D(b) Px(4,t) Px(3,m)">02/25/2021 04:00:00AM</time>
        </li>
      <% } -%>
    </ul>
    <small class="tag Fxsh Fz(26) D(b) Mr(-24,t) Py(6,t) Pr(14,t) Pl(28,t) Mr(-16,m) Py(4,m) Pr(10,m) Pl(16,m) C(xf) <%- tagBgColor %>"><b><%- tag %></b></small>
  </div>
  <!-- 單一筆資料時 加入 className act -->
  <button type="button" class="cardBdCtrl<%- data.length === 1 ? ' act' : '' %> W(full) Ta(l) Pos(r) Ov(hide) D(b) jCardCtrl">
    <div class="D(fx) Ai(c) Bxz(bd) P(24,t) P(16,m)">
      <b class="C(x19ff) Fxg D(b)">Bet Details</b>
      <%- require('../../_components/svg.ejs')({
        className: 'WH(32) Fi(x19ff)',
        svgName: 'arrow-down-less'
      }) %>
    </div>
  </button>
  <div class="cardBd Ov(hide) jCardBd">
    <ul class="P(24,t) P(16,m) Fz(26) in.Mt(40,t) in.Mt(28,m)">
      <% for(let i = 0; i < data.length; i += 1) { -%>
        <% const {kind, odds, name, team, date, isLive, score, scoreColor, tag, tagBgColor} = data[i]; -%>
        <li>
          <div class="D(fx) Ai(c) Mb(16,t) Mb(12,m)">
            <div class="D(fx) Ai(c) Fxg Mr(24,t) Mr(16,m)">
              <%- require('../../_components/svg.ejs')({
                className: 'WH(32) Fxsh Mr(6,t) Mr(4,m) Fxsh',
                svgName: 'soccer'
              }) %>
              <p class="Fxg D(fx) Ai(c)">
                <b class="D(b)"><%- kind %></b>
                <% if ( tag ) { -%>
                  <mark class="Fz(24) C(xf) <%- tagBgColor %> Bdrs(2) Px(3,t) Px(2,m) Ml(6,t) Ml(4,m)"><%- tag %></mark>
                <% } -%>
              </p>
            </div>
            <span class="Fxsh"><%- odds %></span>
          </div>
          <ul>
            <li class="C(x9abf) Mb(6,t) Mb(4,m)"><%- name %></li>
            <li class="C(x9abf) Mb(6,t) Mb(4,m)"><%- team %></li>
            <li class="D(fx) Ai(c)">
              <time class="C(x9abf) D(b) Fxg"><%- date %></time>
              <% if ( isLive || score ) { -%>
                <p class="Fxsh">
                  <% if( isLive ) { -%>
                    <small>@Live 1:0</small>
                  <% } -%>
                  <% if ( score ) { -%>
                    <small <%- scoreColor ? ` class="${scoreColor}"` : '' %>><%- score %></small>
                  <% } -%>
                </p>
              <% } -%>
            </li>
          </ul>
        </li>
      <% } -%>
    </ul>
  </div>
  <footer class="cadrFt Bgc(xfffa) Fz(26) P(24,t) P(16,m)">
    <ul class="D(fx) Ai(c) Mx(-12,m) Mx(-8,m)">
      <% for(let i = 0; i < footer.length; i += 1 ) { -%>
        <%  const {title, value, color} = footer[i]; -%>
        <li class="Fx(auto) Bxz(bd) Px(12,m) Px(8,m)">
          <em class="D(b) C(x9abf) Mb(6,t) Mb(4,m)"><%- title %></em>
          <span class="D(b)">
            <% if ( i !== 2 ) { -%>
              <%- value %>
            <% } else { -%>
              <b class="<%- color %>"><%- value %></b>
            <% } -%>
          </span>
        </li>
      <% } -%>
    </ul>
  </footer>
</div>