            <% if ( typeof htmlWebpackPlugin.options.backURL === 'string') { -%>
              <a href="<%- htmlWebpackPlugin.options.backURL %>" class="mHdIcon D(b) Pos(a)">
                <%- require('../_components/svg.ejs')({
                  className: 'WH(48)',
                  svgName: 'arrow-left'
                }) %>
              </a>
            <% } else { -%>
              <button type="button" class="mHdIcon D(b) Pos(a)" onClick="window.history.back();">
                <%- require('../_components/svg.ejs')({
