          }, {
            icon      : '--bets',
            name      : '投注纪录',
            className : null,
            href      : 'bet-list-running.html',
            notice    : null
          }, {
            icon      : '--ticket',
            name      : '注单',
            className : 'jTicketCtrl',
            href      : 'javascript:;',
            notice    : 2
          }, {
            icon      : '--personal',
